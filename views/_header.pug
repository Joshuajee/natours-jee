header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/sign-up') Sign up
  span.menu &#x2630;
  nav#mySidenav.sidenav
    a.closebtn &times;
    if user
      .profile
        a.nav__el.user_container(href='/me')
          img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        a.nav__el.user_container(href='/me')
          div= user.name
      a.nav__el(href='/') All tours
      a.nav__el.nav__el--logout Log out
    else
      a.nav__el(href='/') All tours
      a.nav__el(href='/login') Log in
      a.nav__el(href='/sign-up') Sign up