extends ../base

block content
  main.main
    .auth-form
      h2.heading-secondary.ma-bt-lg Create An Account
      .center
        .social_login.google
          img(src='/img/btn_google.svg')
          p Sign Up With Google
      .center
        p OR 
      form.form.form--sign-up
        .form__group
          label.form__label(for='Name') Full Name
          input#name.form__input(type='text', placeholder='Jon Doe', required)
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password') Password Confirm
          input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green  Create Account
        .form__group
          .left 
            p Have an account?
                a(href='/login') Login 